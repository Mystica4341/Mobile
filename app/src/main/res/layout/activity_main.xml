<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDynamic"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="Dynamic" />

        <fragment
        android:id="@+id/Fragment1_Static"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.bt.demofragmentlab6.StaticFragment1"
        tools:layout="@layout/fragment_static1"/>

    <fragment
        android:id="@+id/Fragment2_Static"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.bt.demofragmentlab6.StaticFragment2"
        tools:layout="@layout/fragment_static2"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>